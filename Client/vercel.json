{
    "version": 2.1,
    "framework": "nextjs",
    "buildCommand": "npm run build",
    "installCommand": "npm install --legacy-peer-deps",
    "regions": [
        "sin1"
    ],
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-backend-api.com/api/:path*"
        }
    ]
}